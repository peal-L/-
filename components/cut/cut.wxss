.content {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0;
    z-index: -1;
}

.content-show {
  opacity: 1;
  z-index: 2;
}

.cut-area {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  height: calc(100% - 78px);
}

.bar {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 15px 25px;
}

.button {
    padding: 4px;
}

.button>image {
    width: 35px;
}

.button:active {
    position: relative;
    top: -5px
}