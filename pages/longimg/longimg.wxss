page {
    background-color: #fff;
}

.content {
    position: relative;
    padding: 20px;
}

.img {
    position: absolute;
    width: calc(100% - 40px);
    left: 20px;
    top: 20px;
    padding-bottom: 105px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    transition: all 0.5s;
}

.img_hide {
    left: calc(-100% - 40px);
}

.img_item {
    width: 100px;
    height: 100px;
    position: relative;
    margin-bottom: 20px;
    background-color: #eee;
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.img_item > image {
    width: 100%;
    height: 100%;
    border-radius: 12px;
}

.icon-minus {
    position: absolute;
    top: -5px;
    right: -5px;
    padding: 5px;
    font-size: 14px;
    color: #fff;
    border-radius: 50%;
    background-color: rgb(235, 84, 84);
}

.icon-plus {
    color: #aaa;
}

.bar {
    position: fixed;
    padding: 20px;
    width: 100%;
    bottom: 0;
    background-color: #09b1b9;
    display: flex;
    justify-content: space-between;
}

.button {
    padding: 12px;
    margin: 0;
    width: 30%;
    text-align: center;
    background-color: #3b7d9c;
    color: #eee;
    border-radius: 12px;
    font-size: 16px;
}

.choose {
    position: relative;
    left: -100%;
    transition: all 0.4s;
}

.choose_show {
    left: 0;
}

.padding {
    position: relative;
    left: 100%;
    transition: Left 0.4s;
}

.padding_show {
    left: 0;
}

.icon-arrow-right2 {
    transition: all 0.5s;
}

.canvas {
    position: absolute;
    left: 20px;
    top: 20px;
    font-size: 0;
    padding-bottom: 125px;
    width: calc(100% - 40px);
    transition: left 0.5s;
}

.canvas_hide {
    left: calc(100% + 40px);
    padding-bottom: 0;
    height: 0;
    width: 0;
}

.canvas > image {
    width: 100%;
}

#canvas {
    position: fixed;
    top: 200%;
    left: 200%;
}

.setting {
    position: fixed;
    width: calc(100% - 20px);
    height: auto;
    margin: 0 10px;
    bottom: 0;
    padding: 20px;
    background-color: #0a5e7a;
    border-radius: 12px;
    transform: translateY(0);
    transition: all 0.4s;
}

.setting_hide {
    transform: translateY(120%);
}

.setting_name {
    display: flex;
    align-items: center;
    color: #fff;
    font-size: 22px;
}

.setting_name>slider {
    width: calc(100% - 60px);
    margin-left: 28px;
    margin-right: 8px;
}

.cover_all {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    display: none;
}

.cover_all_show {
    display: block;
}

.icon-cog {
    transition: all 0.4s;
}
